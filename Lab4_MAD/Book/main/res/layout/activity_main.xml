<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffe4f2"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/introButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:backgroundTint="#9571DD"
                android:text="Intro"
                android:textColor="#ffe4f2" />

            <Button
                android:id="@+id/chap1Button"
                android:layout_width="77dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:backgroundTint="#9571DD"
                android:text="1"
                android:textColor="#ffe4f2" />

            <Button
                android:id="@+id/chap2Button"
                android:layout_width="77dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:backgroundTint="#9571DD"
                android:text="2"
                android:textColor="#ffe4f2" />

            <Button
                android:id="@+id/chap3Button"
                android:layout_width="77dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:backgroundTint="#9571DD"
                android:text="3"
                android:textColor="#ffe4f2" />

            <Button
                android:id="@+id/chap4Button"
                android:layout_width="77dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:backgroundTint="#9571DD"
                android:text="4"
                android:textColor="#ffe4f2" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-6dp" />
    </LinearLayout>

</RelativeLayout>
